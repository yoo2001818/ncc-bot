{
  "parser": "babel-eslint",
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-underscore-dangle": 0,
    "max-len": [
      1,
      80,
      2
    ],
    "keyword-spacing": 2,
    "no-multiple-empty-lines": [
      1,
      {
        "max": 2
      }
    ],
    "strict": [
      2,
      "never"
    ],
    "no-console": 2,
    "curly": [
      2,
      "multi-line"
    ],
    "eqeqeq": [
      2,
      "allow-null"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true
  }
}
